# ==============================================================================
# DATABASE - Neon PostgreSQL
# ==============================================================================
# Get your connection string from: https://console.neon.tech
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL="postgresql://username:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# For Prisma with connection pooling (recommended for serverless)
# Use the pooled connection string from Neon dashboard
DATABASE_URL_POOLED="postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require&pgbouncer=true"

# ==============================================================================
# AUTHENTICATION - Better Auth
# ==============================================================================
# Generate a secure random string (min 32 characters)
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET="your-super-secret-key-minimum-32-characters-long-change-this"

# Your application URL (change for production)
BETTER_AUTH_URL="http://localhost:3000"

# ==============================================================================
# M-PESA DARAJA API - Kenya Mobile Payments
# ==============================================================================
# Get credentials from: https://developer.safaricom.co.ke
# Use sandbox for testing, production for live

# Environment: "sandbox" or "production"
MPESA_ENVIRONMENT="sandbox"

# Sandbox credentials (for testing)
MPESA_CONSUMER_KEY="your_sandbox_consumer_key"
MPESA_CONSUMER_SECRET="your_sandbox_consumer_secret"
MPESA_BUSINESS_SHORT_CODE="174379"
MPESA_PASSKEY="your_sandbox_passkey"

# Production credentials (uncomment for live)
# MPESA_CONSUMER_KEY="your_production_consumer_key"
# MPESA_CONSUMER_SECRET="your_production_consumer_secret"
# MPESA_BUSINESS_SHORT_CODE="your_paybill_number"
# MPESA_PASSKEY="your_production_passkey"

# Callback URL (must be publicly accessible)
MPESA_CALLBACK_URL="https://yourdomain.com/api/mpesa/callback"

# ==============================================================================
# AFRICA'S TALKING SMS - Kenya SMS Service (Optional)
# ==============================================================================
# Get credentials from: https://africastalking.com
AFRICAS_TALKING_API_KEY="your_api_key"
AFRICAS_TALKING_USERNAME="sandbox"
AFRICAS_TALKING_SENDER_ID="SCHOOL"

# ==============================================================================
# NEXT.JS CONFIGURATION
# ==============================================================================
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"

# ==============================================================================
# OPTIONAL: OBSERVABILITY & MONITORING
# ==============================================================================
# Sentry for error tracking
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# ==============================================================================
# OPTIONAL: EMAIL SERVICE (for notifications)
# ==============================================================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="School Management <noreply@yourschool.com>"

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# Session duration in seconds (default: 7 days)
SESSION_MAX_AGE="604800"

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"
