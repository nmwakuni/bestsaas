// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION (Better Auth integration)
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?
  image         String?

  // RBAC
  roleId        String?
  role          Role?     @relation(fields: [roleId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]

  // Link to school staff or parent
  staff         Staff?
  parent        Parent?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// RBAC (Role-Based Access Control)
// ============================================

model Role {
  id          String   @id @default(cuid())
  name        String   @unique // "HEAD_TEACHER", "DEPUTY", "TEACHER", "BURSAR", "PARENT"
  description String?

  users       User[]
  permissions RolePermission[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique // "students.create", "fees.view", "payments.delete"
  description String?
  module      String   // "students", "fees", "payments", etc.
  action      String   // "create", "read", "update", "delete"

  roles       RolePermission[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  createdAt    DateTime   @default(now())

  @@unique([roleId, permissionId])
}

// ============================================
// SCHOOL CORE MODELS
// ============================================

model School {
  id              String   @id @default(cuid())
  name            String
  code            String   @unique // e.g., "ST001"
  phone           String
  email           String
  address         String
  logo            String?

  // M-Pesa Configuration
  mpesaShortcode  String?  // Paybill/Till number
  mpesaPasskey    String?  // Encrypted

  // Subscription
  subscriptionPlan    String @default("STARTER") // STARTER, GROWTH, PROFESSIONAL, ENTERPRISE
  subscriptionStatus  String @default("TRIAL") // TRIAL, ACTIVE, SUSPENDED, CANCELLED
  subscriptionEndsAt  DateTime?

  // Multi-Campus
  isHeadOffice    Boolean  @default(true)
  parentSchoolId  String?
  parentSchool    School?  @relation("SchoolCampuses", fields: [parentSchoolId], references: [id])
  campuses        School[] @relation("SchoolCampuses")

  // Relations
  students        Student[]
  staff           Staff[]
  classes         Class[]
  feeStructures   FeeStructure[]
  academicYears   AcademicYear[]
  payments        Payment[]
  messages        Message[]
  events          Event[]
  admissions      Admission[]
  mealPlans       MealPlan[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AcademicYear {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  name            String   // e.g., "2024"
  startDate       DateTime
  endDate         DateTime
  currentTerm     Int      @default(1) // 1, 2, or 3
  isActive        Boolean  @default(true)

  terms           Term[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([schoolId, name])
}

model Term {
  id              String       @id @default(cuid())
  academicYearId  String
  academicYear    AcademicYear @relation(fields: [academicYearId], references: [id], onDelete: Cascade)

  termNumber      Int      // 1, 2, or 3
  startDate       DateTime
  endDate         DateTime

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([academicYearId, termNumber])
}

model Class {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  name            String   // e.g., "Grade 1A", "Form 2 East"
  grade           String   // "Grade 1", "Grade 2", ... "Form 4"
  stream          String?  // "A", "B", "East", "West"
  capacity        Int      @default(40)

  students        Student[]
  classTeacher    Staff?   @relation(fields: [classTeacherId], references: [id])
  classTeacherId  String?
  timetable       TimetableSlot[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([schoolId, name])
}

// ============================================
// STUDENT & PARENT MODELS
// ============================================

model Student {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  classId         String?
  class           Class?   @relation(fields: [classId], references: [id])

  // Personal Info
  admissionNumber String
  upiNumber       String?  // NEMIS UPI (Unique Personal Identifier)
  firstName       String
  middleName      String?
  lastName        String
  dateOfBirth     DateTime
  gender          String   // "MALE", "FEMALE"
  photoUrl        String?
  birthCertNumber String?

  // Contact
  address         String?

  // Academic
  enrollmentDate  DateTime
  status          String   @default("ACTIVE") // ACTIVE, SUSPENDED, GRADUATED, TRANSFERRED

  // Medical
  allergies       String?
  medicalNotes    String?

  // Relationships
  parents         Parent[]
  feeRecords      FeeRecord[]
  payments        Payment[]
  attendance      Attendance[]
  grades          Grade[]
  assessments     Assessment[]
  reportCards     ReportCard[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([schoolId, admissionNumber])
  @@index([schoolId])
  @@index([classId])
}

model Parent {
  id              String   @id @default(cuid())

  // Personal Info
  firstName       String
  lastName        String
  relationship    String   // "FATHER", "MOTHER", "GUARDIAN"
  nationalId      String?
  email           String?
  phone           String   // Primary contact (WhatsApp)
  alternatePhone  String?
  address         String?
  occupation      String?

  // Relations
  students        Student[]
  userId          String?  @unique // Link to auth user
  user            User?    @relation(fields: [userId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([phone])
}

model Staff {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  // Personal Info
  staffNumber     String
  tscNumber       String?  // Teachers Service Commission
  firstName       String
  lastName        String
  email           String
  phone           String
  role            String   // "HEAD_TEACHER", "DEPUTY", "TEACHER", "BURSAR", "SECRETARY"
  dateOfBirth     DateTime?
  nationalId      String?
  photoUrl        String?

  // Employment
  employmentDate  DateTime?
  status          String   @default("ACTIVE") // ACTIVE, SUSPENDED, TERMINATED

  // Relations
  userId          String?  @unique // Link to auth user
  user            User?    @relation(fields: [userId], references: [id])
  classesAsTeacher Class[]
  subjects        SubjectTeacher[]
  timetableSlots  TimetableSlot[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([schoolId, staffNumber])
  @@index([schoolId])
}

// ============================================
// FEE MANAGEMENT
// ============================================

model FeeStructure {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  name            String   // e.g., "Grade 1 Fees 2024"
  grade           String   // "Grade 1", "Grade 2", etc.
  academicYear    String   // "2024"
  isActive        Boolean  @default(true)

  feeItems        FeeItem[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([schoolId, grade, academicYear])
  @@index([schoolId])
}

model FeeItem {
  id              String       @id @default(cuid())
  feeStructureId  String
  feeStructure    FeeStructure @relation(fields: [feeStructureId], references: [id], onDelete: Cascade)

  name            String   // "Tuition", "Transport", "Meals", "Activities"
  amount          Decimal  @db.Decimal(10, 2)
  term            Int      // 1, 2, or 3 (or 0 for annual)
  isOptional      Boolean  @default(false)
  description     String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FeeRecord {
  id              String   @id @default(cuid())
  studentId       String
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  academicYear    String
  term            Int

  totalAmount     Decimal  @db.Decimal(10, 2)
  paidAmount      Decimal  @db.Decimal(10, 2) @default(0)
  balance         Decimal  @db.Decimal(10, 2)

  status          String   @default("PENDING") // PENDING, PARTIAL, PAID, OVERDUE
  dueDate         DateTime?

  payments        Payment[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([studentId, academicYear, term])
  @@index([studentId])
  @@index([status])
}

model Payment {
  id              String    @id @default(cuid())
  schoolId        String
  school          School    @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  studentId       String
  student         Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  feeRecordId     String?
  feeRecord       FeeRecord? @relation(fields: [feeRecordId], references: [id])

  amount          Decimal  @db.Decimal(10, 2)
  paymentMethod   String   // "MPESA", "CASH", "BANK_TRANSFER", "CHEQUE"

  // M-Pesa specific
  mpesaReceiptNumber String? @unique
  mpesaPhone      String?
  mpesaTransactionDate DateTime?
  mpesaRequestId  String?  // Checkout request ID

  // General
  receiptNumber   String   @unique
  paidBy          String?  // Name of payer
  notes           String?

  status          String   @default("COMPLETED") // COMPLETED, PENDING, FAILED

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([schoolId])
  @@index([studentId])
  @@index([status])
  @@index([createdAt])
}

// ============================================
// ATTENDANCE
// ============================================

model Attendance {
  id              String   @id @default(cuid())
  studentId       String
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  date            DateTime @db.Date
  status          String   // "PRESENT", "ABSENT", "LATE", "EXCUSED"
  notes           String?

  markedBy        String?  // Staff ID

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([studentId, date])
  @@index([studentId])
  @@index([date])
}

// ============================================
// ACADEMICS (CBC & GRADEBOOK)
// ============================================

model Subject {
  id              String   @id @default(cuid())
  name            String   // "Mathematics", "English", etc.
  code            String?  // "MATH101"
  description     String?

  // CBC Learning Areas
  learningArea    String?  // "Literacy Activities", "Mathematical Activities"

  teachers        SubjectTeacher[]
  grades          Grade[]
  assessments     Assessment[]
  timetableSlots  TimetableSlot[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([name])
}

model SubjectTeacher {
  id              String   @id @default(cuid())
  subjectId       String
  subject         Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  staffId         String
  staff           Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  grade           String?  // Which grade this teacher teaches this subject

  createdAt       DateTime @default(now())

  @@unique([subjectId, staffId, grade])
}

model Grade {
  id              String   @id @default(cuid())
  studentId       String
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subjectId       String
  subject         Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  academicYear    String
  term            Int
  assessmentType  String   // "CAT", "EXAM", "ASSIGNMENT"
  score           Decimal  @db.Decimal(5, 2)
  maxScore        Decimal  @db.Decimal(5, 2) @default(100)
  percentage      Decimal  @db.Decimal(5, 2)

  grade           String?  // "A", "B", "C", etc.
  remarks         String?

  enteredBy       String?  // Staff ID

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([studentId])
  @@index([subjectId])
}

// CBC Assessment
model Assessment {
  id              String   @id @default(cuid())
  studentId       String
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subjectId       String
  subject         Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  academicYear    String
  term            Int

  // CBC Specific
  strand          String?  // "Number Operations", "Geometry", etc.
  learningOutcome String?
  competencyLevel String   // "Exceeds", "Meets", "Approaches", "Below"

  remarks         String?

  assessedBy      String?  // Staff ID
  assessedAt      DateTime @default(now())

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([studentId])
}

// CBC Report Cards
model ReportCard {
  id              String   @id @default(cuid())
  studentId       String
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  academicYear    String
  term            Int

  // CBC Competencies (1-5 scale or descriptive)
  communication   String?
  collaboration   String?
  criticalThinking String?
  creativity      String?
  citizenship     String?
  learning        String?
  selfEfficacy    String?

  // Values
  values          String?  @db.Text // JSON of values assessment

  // Overall remarks
  classTeacherRemarks String? @db.Text
  headTeacherRemarks  String? @db.Text

  generatedAt     DateTime?
  publishedAt     DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([studentId, academicYear, term])
}

// ============================================
// TIMETABLE
// ============================================

model TimetableSlot {
  id              String   @id @default(cuid())
  classId         String
  class           Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  subjectId       String
  subject         Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  staffId         String
  staff           Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  dayOfWeek       Int      // 1-5 (Monday-Friday)
  startTime       String   // "08:00"
  endTime         String   // "09:00"
  room            String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([classId])
  @@index([staffId])
}

// ============================================
// EVENTS & CALENDAR
// ============================================

model Event {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  title           String
  description     String?  @db.Text
  type            String   // "EXAM", "SPORTS_DAY", "HOLIDAY", "MEETING", "PARENT_MEETING"

  startDate       DateTime
  endDate         DateTime
  allDay          Boolean  @default(false)

  location        String?
  organizer       String?  // Staff ID

  // Who can see this
  visibleTo       String   @default("ALL") // "ALL", "STAFF", "PARENTS", "STUDENTS"

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([schoolId])
  @@index([startDate])
}

// ============================================
// ONLINE ADMISSIONS
// ============================================

model Admission {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  // Application Info
  applicationNumber String @unique
  grade           String   // Applying for which grade
  academicYear    String

  // Student Info
  firstName       String
  middleName      String?
  lastName        String
  dateOfBirth     DateTime
  gender          String
  birthCertNumber String?

  // Parent Info
  parentFirstName String
  parentLastName  String
  parentPhone     String
  parentEmail     String?
  parentNationalId String?
  address         String?

  // Documents (URLs to uploaded files)
  birthCertUrl    String?
  reportCardUrl   String?
  photoUrl        String?

  // Application Status
  status          String   @default("PENDING") // PENDING, APPROVED, REJECTED, WAITLIST
  reviewedBy      String?  // Staff ID
  reviewedAt      DateTime?
  rejectionReason String?

  // Payment
  applicationFee  Decimal? @db.Decimal(10, 2)
  paymentStatus   String   @default("UNPAID") // UNPAID, PAID
  mpesaReceipt    String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([schoolId])
  @@index([status])
}

// ============================================
// MEAL PLANNING (Boarding Schools)
// ============================================

model MealPlan {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  name            String   // "Week 1 Menu", "December Menu"
  weekNumber      Int?
  startDate       DateTime
  endDate         DateTime

  meals           Meal[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([schoolId])
}

model Meal {
  id              String   @id @default(cuid())
  mealPlanId      String
  mealPlan        MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)

  dayOfWeek       Int      // 1-7 (Monday-Sunday)
  mealType        String   // "BREAKFAST", "LUNCH", "DINNER", "SNACK"
  menuItems       String   @db.Text // JSON array of menu items

  // Dietary Info
  vegetarian      Boolean  @default(false)
  allergens       String?  // "nuts, dairy, gluten"

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([mealPlanId])
}

// ============================================
// MESSAGING
// ============================================

model Message {
  id              String   @id @default(cuid())
  schoolId        String
  school          School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  recipient       String   // Phone number
  recipientType   String   // "PARENT", "STAFF"
  recipientId     String?  // Parent or Staff ID
  message         String   @db.Text
  channel         String   // "SMS", "WHATSAPP"

  status          String   @default("PENDING") // PENDING, SENT, DELIVERED, FAILED
  externalId      String?  // Africa's Talking message ID
  errorMessage    String?

  sentBy          String?  // Staff ID

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([schoolId])
  @@index([status])
  @@index([createdAt])
}

// ============================================
// SYSTEM LOGS
// ============================================

model AuditLog {
  id              String   @id @default(cuid())

  userId          String?
  action          String   // "CREATE", "UPDATE", "DELETE", "LOGIN", etc.
  entity          String   // "Student", "Payment", etc.
  entityId        String?
  changes         String?  @db.Text // JSON string of changes
  ipAddress       String?
  userAgent       String?

  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([entity])
  @@index([createdAt])
}
